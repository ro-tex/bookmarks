<h1>Search</h1>
<%= form_for :search, url: search_path do |f| %>
<p>
    <%= f.text_field(:search_terms, {class: 'form-control', placeholder: "type search terms like 'stackoverflow' or 'ski'"}) %>
</p>
<p>
    <%= f.submit(:Search, {class: 'btn btn-primary'}) %>
</p>
<% end %>

<% unless @bookmarks.nil? %>
  <% @bookmarks.each do |bookmark| %>
  <div class="well">
      <h4><%= bookmark.title %></h4>
      <p>URL: <%= link_to bookmark.url.html_safe %></p>
      <%= link_to "View", bookmarks_path(bookmark), class: 'btn btn-default' %>
  </div>
  <% end %>
<% end %>