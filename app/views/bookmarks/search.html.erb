<h1>Search</h1>
<%= form_for :search, url: search_path do |f| %>
<p>
    <%= f.text_field(:search_terms, {class: 'form-control', placeholder: "type search terms like 'stackoverflow' or 'ski'"}) %>
</p>
<p>
    <%= f.submit(:Search, {class: 'btn btn-primary'}) %>
</p>
<% end %>

<% unless @bookmarks.nil? %>
  <%= render 'bookmarks', bookmarks: @bookmarks %>
<% end %>
